html {
    box-sizing: border-box;
}

*,
*::before,
*::after {
    box-sizing: inherit;
}

body {
    background-color: #fafbfc;
    color: #2e3d49;
    font-family: Georgia, Times, 'Times New Roman', serif;
}

h1 {
    font-family: 'Montserrat', sans-serif;
}

h2,
h3,
h4 {
    font-family: 'Open Sans', sans-serif;
}

p {
    line-height: 1.5;
}
